<div class="container">
     <div class="row">
    <% @flats.each do |flat| %>
        <div class="col-sm">
        <div class="flat-card">
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h3><%= flat.name %></h3>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex">
               <span class="material-icons">snowshoeing</span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex ml-3">
                <i class="material-icons mr-2">euro_symbol</i> <%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <%= link_to 'More info'%>
            <a href="#" class="ml-3 text-warning">Edit</a>
            <a href="#" class="ml-3 text-danger">Remove</a>
          </div>
        </div>
      </div>

    <% end %>
    </div>
</div>
</div>
</div>
